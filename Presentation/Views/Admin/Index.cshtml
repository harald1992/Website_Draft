@{
ViewData["Title"] = "Admin Home Page";
}

@model UserList

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("Create", "Admin", FormMethod.Post))
{
<div class="darkstyle">
    Name: <input class="lightingElement" type="text" name="name">
    <input class="mainButtonStyle" type="submit" value="Create User" />
</div>
}

<br>
<div class="container" id="users">
    <div id="userTable">
        <table class="table table-condensed table-bordered" id="UserIndexTable">
            <thead>
                <tr style="font-size: 125%">
                    <th class="text-center">Id</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">IsAdmin</th>
                    <th class="text-center">Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in @Model.Users)
                {
                <tr class="userRow lightingElement">
                    <td class="">@user.Id</td>
                    <td class="">@user.Name</td>
                    <td class="">@user.IsAdmin</td>
                    <td>
                        @using (Html.BeginForm("Delete", "Admin", FormMethod.Post))
                        {
                        <div class="">
                            <input type="hidden" value="@user.Id" name="id" />
                            <input class="mainButtonStyle" type="submit" value="Delete this user" />
                        </div>

                        }
                    </td>
                </tr>
                }
            </tbody>

        </table>
    </div>
</div>